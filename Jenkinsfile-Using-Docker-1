// Declarative Pipeline
// This pipeline is found on:
// Using Docker with Pipeline 
// https://www.jenkins.io/doc/book/pipeline/docker/
pipeline {
    agent {
        docker { image 'node:20.9.0-alpine3.18' }
    }
    stages {
        stage('Test') {
            steps {
                sh 'node --version'
            }
        }
    }
}